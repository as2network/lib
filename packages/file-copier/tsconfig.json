{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": { "*": ["types/*"] },
		"target": "es2018",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "output",
		"rootDir": "source",
		"sourceMap": true,
		"inlineSources": false,
		"declaration": true,
		"strict": true,
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"lib": [ "es2018" ],
	},
	"include": [
		"source/**/*.ts",
	]
}
